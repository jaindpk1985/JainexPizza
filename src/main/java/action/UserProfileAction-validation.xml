<!DOCTYPE validators PUBLIC "-//OpenSymphony Group//XWork Validator 1.0.2//EN"
       "http://www.opensymphony.com/xwork/xwork-validator-1.0.2.dtd">
<validators>
	<!-- First Name -->
	<field name="userProfileInfo.firstName">
		<field-validator type="requiredstring" short-circuit="true">
			<message key="1.required.field.error">
				Missing default error message
			</message>
		</field-validator>
		<field-validator type="regex">
			<param name="expression">^[A-Za-z]+$</param>
			<message>Only alpha values are allowed</message>
		</field-validator>
	</field>
	<!-- Last Name -->
	<field name="userProfileInfo.lastName">
		<field-validator type="regex">
			<param name="expression">^[A-Za-z]+$</param>
			<message>Only alpha values are allowed</message>
		</field-validator>
	</field>

	<!--Age -->
	<field name="userProfileInfo.age">
		<field-validator type="regex">
			<param name="expression">^[0-9]+$</param>
			<message>Only numeric values are allowed</message>
		</field-validator>

	</field>

	<!--Email -->
	<field name="userProfileInfo.email">
		<field-validator type="email">
			<param name="trim">true</param>
			<message>Email is not in correct format.</message>
		</field-validator>
	</field>

	<!-- Contact No. -->
	<field name="userProfileInfo.contactNo">
		<field-validator type="requiredstring" short-circuit="true">
			<message key="1.required.field.error">
				Missing default error message
			</message>
		</field-validator>
		<field-validator type="regex">
			<param name="expression">^[0-9]+$</param>
			<message>Only numeric values are allowed</message>
		</field-validator>
		<field-validator type="stringlength">
                     <param name="minLength">8</param>
                     <param name="maxLength">10</param>
                     <message>Mobile No should be from 8 to 10 numbers long</message>
        </field-validator>
	</field>

	<!-- Address Line -->
	<field name="addressInfo.addLine">
		<field-validator type="requiredstring" short-circuit="true">
			<message key="1.required.field.error">
				Missing default error message
			</message>
		</field-validator>

	</field>

	<!-- Address City -->
	<field name="addressInfo.city">
		<field-validator type="requiredstring">
			<message key="1.required.field.error">
				Missing default error message
			</message>
		</field-validator>

	</field>

	<!-- Address State -->
	<field name="addressInfo.state">
		<field-validator type="requiredstring">
			<message key="1.required.field.error">
				Missing default error message
			</message>
		</field-validator>
		<field-validator type="regex">
			<param name="expression">^[A-Za-z]+$</param>
			<message>Only alpha values are allowed</message>
		</field-validator>
	</field>

	<!-- Address zip code -->
	<field name="addressInfo.zipCode">
		<field-validator type="requiredstring">
			<message key="1.required.field.error">
				Missing default error message
			</message>
		</field-validator>
		<field-validator type="regex">
			<param name="expression">^[0-9]+$</param>
			<message>Only numeric values are allowed</message>
		</field-validator>
		<field-validator type="stringlength">
                     <param name="minLength">6</param>
                     <param name="maxLength">6</param>
                     <message>ZipCode should be 6 characters long</message>
        </field-validator>
	</field>
</validators>
