<!DOCTYPE validators PUBLIC "-//OpenSymphony Group//XWork Validator 1.0.2//EN"
       "http://www.opensymphony.com/xwork/xwork-validator-1.0.2.dtd">
<validators>
	<!-- Offer Name -->
	<field name="offersInfo.offerName">
		<field-validator type="requiredstring" short-circuit="true">
			<message key="1.required.field.error">
				Missing default error message
			</message>
		</field-validator>
	</field>
	
	
	<field name="offersInfo.startDate">
		<field-validator type="required" short-circuit="true">
			<message key="1.required.field.error">
				Missing default error message
			</message>
		</field-validator>
		<field-validator type="date">
            <param name="Min">1/1/1970</param>
            <param name="max">1/1/2100</param>
            <message>Start Date must be a valid date in the MM/DD/YYYY format</message>
        </field-validator> 
	</field>

	
	<field name="offersInfo.endDate">
		<field-validator type="required" short-circuit="true">
			<message key="1.required.field.error">
				Missing default error message
			</message>
		</field-validator>
		<field-validator type="date">
            <param name="Min">1/1/1970</param>
            <param name="max">1/1/2100</param>
            <message>End Date must be a valid date in the MM/DD/YYYY format</message>
        </field-validator> 
	</field>

	
	<field name="offersInfo.offerDiscount">
		<field-validator type="required" short-circuit="true">
			<message key="1.required.field.error">
				Missing default error message
			</message>
		</field-validator>
		<field-validator type="regex">
			<param name="expression">^[0-9]+$</param>
			<message>Only numeric values are allowed</message>
		</field-validator>
	</field>
	
</validators>
