<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
    "http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>
	<package name="default" extends="struts-default">

		<interceptors>
			<interceptor name="session"
				class="interceptors.SessionInterceptor" />
			<interceptor name="exceptionHandling"
				class="interceptors.ExceptionInterceptor" />
			<interceptor-stack name="sessionStack">
				<interceptor-ref name="session" />
				<interceptor-ref name="defaultStack" />
			</interceptor-stack>
			<interceptor-stack name="defaultStack">
				<interceptor-ref name="exceptionHandling" />
				<interceptor-ref name="alias" />
				<interceptor-ref name="servletConfig" />
				<interceptor-ref name="prepare" />
				<interceptor-ref name="i18n" />
				<interceptor-ref name="chain" />
				<interceptor-ref name="debugging" />
				<interceptor-ref name="profiling" />
				<interceptor-ref name="scopedModelDriven" />
				<interceptor-ref name="modelDriven" />
				<interceptor-ref name="fileUpload" />
				<interceptor-ref name="checkbox" />
				<interceptor-ref name="staticParams" />
				<interceptor-ref name="params" />
				<interceptor-ref name="conversionError" />
				<interceptor-ref name="validation">
					<param name="excludeMethods">
						execute,deletePizza
					</param>
				</interceptor-ref>
				<interceptor-ref name="workflow">
					<param name="excludeMethods ">execute</param>
				</interceptor-ref>
			</interceptor-stack>
		</interceptors>


		<global-results>
			<result name="error">/jsp/error.jsp</result>
			<result name="login">/jsp/index.jsp</result>
		</global-results>

		<action name="welcome" class="action.WelcomeAction">
			<interceptor-ref name="defaultStack"></interceptor-ref>
			<result name="success">/jsp/welcome.jsp</result>
		</action>
		<action name="login" class="action.LoginAction" method="save">
			<interceptor-ref name="defaultStack"></interceptor-ref>
			<result name="input">/jsp/welcome.jsp</result>
			<result name="success" type="redirectAction">
				homeProfile
			</result>
		</action>

		<action name="newRegisteration"
			class="action.NewRegisterationAction">
			<interceptor-ref name="defaultStack"></interceptor-ref>
			<result name="success">/jsp/newRegisteration.jsp</result>
		</action>

		<action name="newRegisterationSave"
			class="action.NewRegisterationAction" method="save">
			<interceptor-ref name="defaultStack"></interceptor-ref>
			<result name="input">/jsp/newRegisteration.jsp</result>
			<result name="success" type="redirectAction">
				homeProfile
			</result>
		</action>

		<action name="logOut" class="action.LogOutAction">
			<result name="success" type="redirectAction">
				welcome
			</result>
		</action>

		<action name="homeProfile" class="action.UserHomeAction">
			<result name="success">/jsp/userHome.jsp</result>
		</action>

		<action name="userProfile" class="action.UserProfileAction">
			<result name="success">/jsp/userProfile.jsp</result>
		</action>

		<action name="userProfileSave" class="action.UserProfileAction"
			method="save">
			<result name="input">/jsp/userProfile.jsp</result>
			<result name="success" type="redirectAction">
				homeProfile
			</result>
		</action>
		<action name="addPizza" class="action.AddPizzaAction">
			<result name="input">/jsp/addPizza.jsp</result>
			<result name="success">/jsp/addPizza.jsp</result>
		</action>

		<action name="updatePizzas" class="action.AddPizzaAction">
			<result name="success">/jsp/updatePizza.jsp</result>
		</action>

		<action name="updatePizza" class="action.AddPizzaAction">
			<result name="success">/jsp/addPizza.jsp</result>
		</action>

		<action name="deletePizza" class="action.AddPizzaAction">
			<result name="success">/jsp/deletePizza.jsp</result>
		</action>

		<action name="deletePizzaSave" class="action.AddPizzaAction"
			method="deletePizza">
			<result name="input">/jsp/deletePizza.jsp</result>
			<result name="success" type="redirectAction">
				deletePizza
			</result>
		</action>

		<action name="addPizzaSave" class="action.AddPizzaAction"
			method="save">
			<result name="input">/jsp/addPizza.jsp</result>
			<result name="success" type="redirectAction">
				/homeProfile
			</result>
		</action>

		<action name="addScheme" class="action.AddSchemeAction">
			<result name="success">/jsp/addScheme.jsp</result>
		</action>

		<action name="addSchemeSave" class="action.AddSchemeAction"
			method="save">
			<result name="input">/jsp/addScheme.jsp</result>
			<result name="success" type="redirectAction">
				/homeProfile
			</result>
		</action>

		<action name="addBpo" class="action.AddBpoAction">
			<result name="success">/jsp/addBpo.jsp</result>
		</action>
		<action name="addBpoSave" class="action.AddBpoAction"
			method="save">
			<result name="input">/jsp/addBpo.jsp</result>
			<result name="success" type="redirectAction">
				/homeProfile
			</result>
		</action>

		<action name="userPreferences"
			class="action.UserPreferencesAction">
			<result name="success">/jsp/userPreferences.jsp</result>
		</action>
		<action name="configureOrder"
			class="action.ConfigureOrderAction">
			<result name="success">/jsp/configureOrder.jsp</result>
		</action>
		<action name="placeOrder" class="action.ConfigureOrderAction"
			method="placeOrder">
			<result name="success" type="redirectAction">
				payment
			</result>
		</action>
		<action name="payment" class="action.PaymentAction">
			<result name="success">/jsp/payment.jsp</result>
		</action>
		<action name="savePayment" class="action.PaymentAction"
			method="savePayment">
			<result name="input">/jsp/payment.jsp</result>
			<result name="success" type="redirectAction">
				placeOrder
			</result>
		</action>
		<action name="placeOrder" class="action.PlaceOrderAction"
			method="placeOrder">
			<result name="success">/jsp/orderPlaced.jsp</result>
		</action>
		<action name="customerOrders"
			class="action.CustomerOrdersAction">
			<result name="success">/jsp/customerOrders.jsp</result>
		</action>

		<action name="completeOrder" class="action.CustomerOrdersAction"
			method="completeOrder">
			<result name="success" type="redirectAction">
				customerOrders
			</result>
		</action>

		<action name="orderDetail" class="action.CustomerOrdersAction"
			method="orderDetail">
			<result name="success">/jsp/orderDetail.jsp</result>
		</action>

		<action name="searchPizza" class="action.PizzaSearchAction"
			method="getSearchedPizza">
			<result name="input" type="redirectAction">
				homeProfile
			</result>
			<result name="success">/jsp/pizzaSearch.jsp</result>
		</action>
		<action name="addCustomer" class="action.AddCustomerAction">
			<result name="success">/jsp/AddCustomer.jsp</result>
		</action>
		<action name="addCustomerSave" class="action.AddCustomerAction"
			method="save">
			<result name="input">/jsp/AddCustomer.jsp</result>
			<result name="success" type="redirectAction">configureOrder</result>
		</action>
	</package>

